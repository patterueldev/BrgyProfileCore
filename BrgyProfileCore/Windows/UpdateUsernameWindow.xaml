<Window x:Class="BrgyProfileCore.Windows.UpdateUsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrgyProfileCore.Windows"
        mc:Ignorable="d"
        Title="UpdateUsernameWindow" Height="276" Width="440">
    <Grid Background="#FFD1D1D1">
        <Label Content="Current Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="currentUsernameBox" Margin="10,36,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Padding="0,4,0,4" IsEnabled="False"/>

        <Label Content="New Username:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="newUsernameBox" Margin="10,93,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Padding="0,4,0,4"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="10,150,10,0" VerticalAlignment="Top" Padding="0,4,0,4"/>
        
        <Button Content="Update" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Padding="15,1,15,1"/>
    </Grid>
</Window>
