<Window x:Class="BrgyProfileCore.Windows.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrgyProfileCore.Windows"
        mc:Ignorable="d"
        Title="UpdatePasswordWindow" Height="450" Width="800">
    <Grid Background="#FFD1D1D1">
        <Label Content="Old Password:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="oldPasswordBox" Margin="10,36,10,0" VerticalAlignment="Top" Padding="0,4,0,4"/>

        <Label Content="New Password:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="newPasswordBox" Margin="10,93,10,0" VerticalAlignment="Top" Padding="0,4,0,4"/>

        <Label Content="Confirm Password:" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="confirmPasswordBox" Margin="10,150,10,0" VerticalAlignment="Top" Padding="0,4,0,4"/>


        <Button Content="Update" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Padding="15,1,15,1"/>
    </Grid>
</Window>
